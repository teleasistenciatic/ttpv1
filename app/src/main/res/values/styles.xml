<resources>

    <!-- Base application theme. -->
    <!-- Por defecto: Theme.AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="Base.V7.Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>


    <style name="blanco_sobre_negro">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Tamaño de títulos -->
    <style name="tex_size_big">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="tex_size_medium">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="tex_size_small">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Divisores -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:color">@color/white</item>
    </style>


</resources>
